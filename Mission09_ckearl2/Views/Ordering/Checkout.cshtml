@{
    
}
@model Order

<h2>Check out now</h2>
<p>Please enter your details, and we will get your donation to those who need it!</p>

<form action="post" asp-action="Checkout" asp-controller="Ordering">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Ship To</h4>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" type="text"/>
    </div>

    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="AddressLine1">Address Line</label>
        <input asp-for="AddressLine1" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine2">Address Line</label>
        <input asp-for="AddressLine2" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="AddressLine3">Address Line</label>
        <input asp-for="AddressLine3" class="form-control" type="text"/>
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="Zip">Zip</label>
        <input asp-for="Zip" class="form-control" type="text"/>
    </div>
    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" class="form-control" type="text"/>
    </div>

    <div class="checkbox">
        <label asp-for="Anonymous">
            <input asp-for="Anonymous" type="checkbox"/> Donate Anonymously
        </label>
    </div>
    <div class="float-end">
        <input type="submit" class="btn btn-info" value="Send Donation"/>
    </div>



</form>