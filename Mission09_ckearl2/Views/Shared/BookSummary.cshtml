@using Mission09_ckearl2.Infrastructure
@model Book

<div class="card border-dark mb-3" style="min-width: 50rem;">
    <div class="card-header">@Model.Category</div>
    <div class="card-body text-dark">
        <h3 class="card-title">@Model.Title</h3>
        <h6 class="card-title">By @Model.Author</h6>
        <div style="width:inherit;">
            <div class="list-group list-group-flush">
                <div class="row mb-2 list-group-item-secondary">
                    <div class="col-6 ">Publisher: <b>@Model.Publisher</b></div>
                    <div class="col-6 ">Number of Pages: <b>@Model.PageCount</b></div>
                </div>
                <div class="row mb-2 list-group-item-secondary">
                    <div class="col-6 ">Category: <b>@Model.Category</b></div>
                    <div class="col-6 ">ISBN: <b>@Model.Isbn</b></div>
                </div>
                <div class="row rounded">
                    <div class="col-3">
                        <div class="d-flex justify-content-center align-items-center list-group-item list-group-item-info">Price: $<b>@Model.Price</b></div>
                    </div>
                    <div class="col-3 justify-content-end">
                        <form method="post" asp-page="/Order">
                            <input type="hidden" asp-for="@Model.BookId"/>
                            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
                            <span class="card-text">
                                <button class="btn btn-success btn-sm float-end" type="submit">Add to Cart</button>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>