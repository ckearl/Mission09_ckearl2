@using Mission09_ckearl2.Infrastructure
@model Cart
<div class="">
    
    
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text text-white">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s)
            $@Model.CalculateTotal().ToString()
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>