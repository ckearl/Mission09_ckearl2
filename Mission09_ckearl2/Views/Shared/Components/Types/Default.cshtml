@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-projectType="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string type in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-projectType="@type" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == type ? "btn-info" : "btn-outline-secondary")">@type</a>
    }
</div>